<!--suppress ALL -->
<fop version="1.0">

  <base>./</base>
  <font-base>./</font-base>

  <renderers>
    <renderer mime="application/pdf">
      <fonts>

        <!--
          Custom font configuration is mandatory:
          1. These fonts will get embedded in the resulting file instead of being referenced,
             increasing portability,
          2. Default fonts (system-wide) may lack cyrillic support.
        -->

        <font kerning="yes" embed-url="/mobi/eyeline/utils/pdfgenerator/fonts/Arial.ttf">
          <font-triplet name="Arial" style="normal" weight="normal"/>
        </font>
        <font kerning="yes" embed-url="/mobi/eyeline/utils/pdfgenerator/fonts/Arial_Bold.ttf">
          <font-triplet name="Arial" style="normal" weight="500"/>
        </font>
        <font kerning="yes" embed-url="/mobi/eyeline/utils/pdfgenerator/fonts/Arial_Italic.ttf">
          <font-triplet name="Arial" style="italic" weight="normal"/>
        </font>
      </fonts>
    </renderer>
  </renderers>
</fop>
